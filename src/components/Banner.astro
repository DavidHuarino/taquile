<style>
    @import 'flowbite';
    .banner {
        background-image: linear-gradient(100deg, #000000, #00000020), url('img/banner-taquile.jpg');
        height: 60rem;
        background-size: cover;
        background-position: center;
    }

    .content-banner {
        max-width: 90rem;
        margin: 0 auto;
        padding: 25rem 0;
    }

    .content-banner p {
        color: var(--primary-color);
        font-size: 1.2rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .content-banner h2 {
        color: #fff;
        font-size: 3.5rem;
        font-weight: 500;
        line-height: 1.2;
    }

    .content-banner a {
        margin-top: 2rem;
        text-decoration: none;
        color: #fff;
        background-color: var(--primary-color);
        display: inline-block;
        padding: 1rem 3rem;
        text-transform: uppercase;
        border-radius: 3rem;
    }
</style>